{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "lib": [
      "dom.iterable",
      "es2017",
      "esnext"
    ],
    "types": [
      "node",
      "long"
    ],
    "sourceMap": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}